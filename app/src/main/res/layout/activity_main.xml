<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_above="@+id/p1detail"
            android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/radish"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/p1detail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/gridbase"
        android:layout_marginBottom="10dp">
        <TableLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/teal_700">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textStyle="bold"
                    android:textColor="#26FF00"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textStyle="bold"
                    android:textColor="@color/radish"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textStyle="bold"
                    android:textColor="#CDDC39"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/p1win"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textColor="#16FD1F"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/p1lose"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textColor="@color/radish"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/p1draw"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#CDDC39"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cdBtn"
            android:src="@drawable/man" />
        <TextView
            android:id="@+id/nameOfP1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridbase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:id="@+id/btn1"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:onClick="click"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn2"
                android:onClick="click"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn3"
                android:onClick="click"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />

            <ImageView
                android:id="@+id/btn4"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:onClick="click"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn5"
                android:onClick="click"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn6"
                android:onClick="click"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn7"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:onClick="click"
                android:background="@color/black"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn8"
                android:onClick="click"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
            <ImageView
                android:id="@+id/btn9"
                android:onClick="click"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/cdBtn" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/gridbase"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nameOfp2"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cdBtn"
            android:src="@drawable/man" />
        <TableLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/teal_700">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textStyle="bold"
                    android:textColor="#26FF00"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textStyle="bold"
                    android:textColor="@color/radish"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textStyle="bold"
                    android:textColor="#8BC34A"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/p2win"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#26FF00"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/p2lose"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/radish"
                    android:textAlignment="center"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/p2draw"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#CDDC39"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p2"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/radish"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/rst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="130dp"
        android:onClick="restart"
        android:text="@string/restart"
        android:textSize="18sp" />
</RelativeLayout>